{
  "apps": [
    {
      "name": "laravel-inertia-ssr",
      "script": "npm",
      "args": "run start-ssr",
      "cwd": "/home/admweb/nganggurdev",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "production",
        "APP_ENV": "production",
        "SSR_PORT": "13714",
        "HOST": "127.0.0.1"
      },
      "log_file": "./storage/logs/ssr.log",
      "error_file": "./storage/logs/ssr-error.log",
      "out_file": "./storage/logs/ssr-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "restart_delay": 1000,
      "max_restarts": 5,
      "min_uptime": "10s",
      "watch": false,
      "autorestart": true
    }
  ]
}
